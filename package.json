  "devDependencies": {
    "@release-it/conventional-changelog": "^8.0.1",
    "release-it": "^17.3.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "type": [
            { "type": "feat", "section": "Features"},
            { "type": "fix", "section": "Bug Fixes"}
          ]
        }
      }
    } 
  }
}
